{
    "default": {
      "jobs": [
        {
          "name": "prepare_data",
          "job_clusters": [
            {
              "job_cluster_key": "telcochurn_cluster",
              "new_cluster": {
                "spark_version": "11.0.x-cpu-ml-scala2.12",
                "num_workers": 5,
                "node_type_id": "i3.xlarge",
                "aws_attributes": {
                  "availability": "ON_DEMAND"
