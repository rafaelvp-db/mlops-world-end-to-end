{
    "default": {
      "jobs": [
        {
          "name": "retrain",
          "job_clusters": [
            {
              "job_cluster_key": "telcochurn_cluster",
              "new_cluster": {
                "spark_version": "11.0.x-cpu-ml-scala2.12",
                "num_workers": 5,
                "node_type_id": "i3.xlarge",
                "aws_attributes": {
                  "availability": "ON_DEMAND"
                }
              }
            }
          ],
          "tasks": [
            {
              "task_key": "prepare_data",
              "job_cluster_key": "telcochurn_cluster",
              "spark_python_task": {
                "name": "prepare_data",
                "python_file": "telco_churn_mlops/jobs/data/entrypoint.py",
                "parameters": [
                  "--conf-file",
                  "conf/data_prep_config.json"
                ]
              }
            },
            {
              "task_key": "build_model",
              "depends_on": [
                {
                  "task_key": "prepare_data"
                }
              ],
              "job_cluster_key": "telcochurn_cluster",
              "spark_python_task": {
                "name": "build_model",
                "python_file": "telco_churn_mlops/jobs/model/entrypoint.py",
                "parameters": [
                  "--conf-file",
                  "conf/build_model_config.json"
                ],
                "libraries": [
                  {
                    "pypi": {
                      "package": "-r telco_churn_mlops/pipelines/requirements.txt"
                    }
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  }